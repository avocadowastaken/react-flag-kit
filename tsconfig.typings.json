{
  "extends": "./tsconfig.json",
  "exclude": [
    "**/__docs__/**/*.ts",
    "**/__docs__/**/*.tsx",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "**/__testutils__/**/*.ts",
    "**/__testutils__/**/*.tsx"
  ],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationDir": "typings",
    "emitDeclarationOnly": true
  }
}
