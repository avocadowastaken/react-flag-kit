{
  "name": "react-flag-kit",
  "version": "0.5.0",
  "description": "FlagKit for React",
  "keywords": [
    "react",
    "icons",
    "flags",
    "flag-icons",
    "flagkit"
  ],
  "repository": "https://github.com/umidbekk/react-flag-kit.git",
  "license": "MIT",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rapidbundle",
    "format": "prettier . --check --write",
    "prerelease": "npx tsc && npm run format && npm run build",
    "release": "np --no-2fa",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "devDependencies": {
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.2",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "esbuild-jest": "0.5.0",
    "jest": "27.3.1",
    "np": "7.5.0",
    "prettier": "2.4.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-packagejson": "2.2.13",
    "rapidbundle": "0.12.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "typescript": "4.4.4"
  },
  "peerDependencies": {
    "react": "^16.6.0 || ^17.0.0"
  },
  "engines": {
    "npm": ">=7"
  }
}
